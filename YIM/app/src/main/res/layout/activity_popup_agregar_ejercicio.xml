<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_style_rectangulo_fondo_clarito__borde_blanco_20"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".vista.vista.PopupAgregarEjercicio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:background="@drawable/_style_rectangulo_gris_clarito__borde_10"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/merriweather_light"
                android:inputType="text"
                android:padding="10dp"
                android:hint="Nombre del ejercicio"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/gris_clarito"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/lupa_negra"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </LinearLayout>

        <ImageView
            android:id="@+id/cancelar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="15dp"
            android:contentDescription="@string/imagen_cancelar"
            android:src="@drawable/cancelar" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/_style_rectangulo_fondo_oscuro__borde_blanco_20"
                android:orientation="horizontal"
                android:padding="2dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imagen"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:src="@drawable/pecho"
                    app:shapeAppearanceOverlay="@style/radius" />

                <TextView
                    android:id="@+id/nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@id/imagen"
                    android:fontFamily="@font/merriweather_light"
                    android:text="Fondo de tríceps en máquina"
                    android:textColor="@color/blanco"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nombre"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@id/imagen"
                    android:fontFamily="@font/merriweather_light"
                    android:text="Tríceps"
                    android:textColor="@color/blanco" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/_style_rectangulo_fondo_oscuro__borde_blanco_20"
                android:orientation="horizontal"
                android:padding="2dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imagen2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:src="@drawable/mujer_posando"
                    app:shapeAppearanceOverlay="@style/radius" />

                <TextView
                    android:id="@+id/nombre2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@id/imagen2"
                    android:fontFamily="@font/merriweather_light"
                    android:text="@string/nombre_ejercicio_2"
                    android:textColor="@color/blanco"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nombre2"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@id/imagen2"
                    android:fontFamily="@font/merriweather_light"
                    android:text="@string/musculos_ejercicio_2"
                    android:textColor="@color/blanco" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/_style_rectangulo_fondo_oscuro__borde_blanco_20"
                android:orientation="horizontal"
                android:padding="2dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imagen3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:src="@drawable/biceps"
                    app:shapeAppearanceOverlay="@style/radius" />

                <TextView
                    android:id="@+id/nombre3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@id/imagen3"
                    android:fontFamily="@font/merriweather_light"
                    android:text="Curl de bíceps con mancuernas"
                    android:textColor="@color/blanco"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nombre3"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@id/imagen3"
                    android:fontFamily="@font/merriweather_light"
                    android:text="Bíceps, Antebrazo"
                    android:textColor="@color/blanco" />

            </RelativeLayout><RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/_style_rectangulo_fondo_oscuro__borde_blanco_20"
                android:orientation="horizontal"
                android:padding="2dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imagen4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:src="@drawable/press_militar_hombre"
                    app:shapeAppearanceOverlay="@style/radius" />

                <TextView
                    android:id="@+id/nombre4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@id/imagen4"
                    android:fontFamily="@font/merriweather_light"
                    android:text="@string/nombre_ejercicio_4"
                    android:textColor="@color/blanco"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nombre4"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@id/imagen4"
                    android:fontFamily="@font/merriweather_light"
                    android:text="@string/musculos_ejercicio_4"
                    android:textColor="@color/blanco" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/_style_rectangulo_fondo_oscuro__borde_blanco_20"
                android:orientation="horizontal"
                android:padding="2dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imagen5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:src="@drawable/sentadilla_hombre"
                    app:shapeAppearanceOverlay="@style/radius" />

                <TextView
                    android:id="@+id/nombre5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@id/imagen5"
                    android:fontFamily="@font/merriweather_light"
                    android:text="@string/nombre_ejercicio_3"
                    android:textColor="@color/blanco"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nombre5"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@id/imagen5"
                    android:fontFamily="@font/merriweather_light"
                    android:text="@string/musculos_ejercicio_3"
                    android:textColor="@color/blanco" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/_style_rectangulo_fondo_oscuro__borde_blanco_20"
                android:orientation="horizontal"
                android:padding="2dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imagen6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:src="@drawable/curl_de_biceps_hombre"
                    app:shapeAppearanceOverlay="@style/radius" />

                <TextView
                    android:id="@+id/nombre6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@id/imagen6"
                    android:fontFamily="@font/merriweather_light"
                    android:text="@string/nombre_ejercicio_1"
                    android:textColor="@color/blanco"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nombre6"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@id/imagen6"
                    android:fontFamily="@font/merriweather_light"
                    android:text="@string/musculos_ejercicio_1"
                    android:textColor="@color/blanco" />

            </RelativeLayout>


        </LinearLayout>

    </ScrollView>




</LinearLayout>