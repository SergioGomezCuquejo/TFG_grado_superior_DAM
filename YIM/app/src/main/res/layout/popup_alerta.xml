<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".vista.vista.PopupAlerta">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/_style_rectangulo_fondo_clarito__borde_blanco_20"
        android:gravity="center"
        android:padding="20dp"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/titulo_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/blanco"
            android:textSize="23sp"
            android:textStyle="bold" />


        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/_style_rectangulo_gris" />

        <TextView
            android:id="@+id/texto_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/blanco"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancelar"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/_style_borde_rojo"
                android:fontFamily="@font/merriweather_light"
                android:text="@string/cancelar"
                android:textColor="@color/rojo_clarito"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/aceptar"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/_style_rectangulo_verde__borde_verde"
                android:fontFamily="@font/merriweather_light"
                android:foregroundGravity="right"
                android:text="@string/aceptar"
                android:textColor="@color/blanco"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>