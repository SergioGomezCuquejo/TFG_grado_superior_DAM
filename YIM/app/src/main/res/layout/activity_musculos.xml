<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".vista.vista.Musculos"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/_style_borde_blanco_arriba_abajo"
        android:fontFamily="@font/merriweather_light"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/musculos"
        android:textColor="@color/blanco"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/_style_rectangulo_fondo_clarito__borde_negro"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:padding="10dp"
                tools:ignore="UselessParent">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/_style_rectangulo_gris_oscuro__borde_blanco_10"
                    android:padding="1dp"
                    tools:ignore="NestedWeights">

                    <TextView
                        android:id="@+id/biceps"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/_style_rectangulo_gris_oscuro__borde_blanco_10"
                        android:fontFamily="@font/merriweather_light"
                        android:gravity="center"
                        android:text="@string/biceps"
                        android:textColor="@color/negro_oscuro"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="NestedWeights" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/_style_rectangulo_fondo_clarito__borde_negro"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:padding="10dp"
                tools:ignore="UselessParent">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/_style_rectangulo_gris_oscuro__borde_blanco_10"
                    android:padding="1dp"
                    tools:ignore="NestedWeights">

                    <TextView
                        android:id="@+id/espalda"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/_style_rectangulo_gris_oscuro__borde_blanco_10"
                        android:fontFamily="@font/merriweather_light"
                        android:gravity="center"
                        android:text="@string/espalda"
                        android:textColor="@color/negro_oscuro"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="NestedWeights" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/_style_rectangulo_fondo_clarito__borde_negro"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:padding="10dp"
                tools:ignore="UselessParent">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/_style_rectangulo_gris_oscuro__borde_blanco_10"
                    android:padding="1dp"
                    tools:ignore="NestedWeights">

                    <TextView
                        android:id="@+id/hombro"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/_style_rectangulo_gris_oscuro__borde_blanco_10"
                        android:fontFamily="@font/merriweather_light"
                        android:gravity="center"
                        android:text="@string/hombro"
                        android:textColor="@color/negro_oscuro"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="NestedWeights" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/_style_rectangulo_fondo_clarito__borde_negro"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:padding="10dp"
                tools:ignore="UselessParent">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/_style_rectangulo_gris_oscuro__borde_blanco_10"
                    android:padding="1dp"
                    tools:ignore="NestedWeights">

                    <TextView
                        android:id="@+id/pecho"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/_style_rectangulo_gris_oscuro__borde_blanco_10"
                        android:fontFamily="@font/merriweather_light"
                        android:gravity="center"
                        android:text="@string/pecho"
                        android:textColor="@color/negro_oscuro"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="NestedWeights" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/_style_rectangulo_fondo_clarito__borde_negro"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:padding="10dp"
                tools:ignore="UselessParent">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/_style_rectangulo_gris_oscuro__borde_blanco_10"
                    android:padding="1dp"
                    tools:ignore="NestedWeights">

                    <TextView
                        android:id="@+id/pierna"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/_style_rectangulo_gris_oscuro__borde_blanco_10"
                        android:fontFamily="@font/merriweather_light"
                        android:gravity="center"
                        android:text="@string/pierna"
                        android:textColor="@color/negro_oscuro"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="NestedWeights" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/_style_rectangulo_fondo_clarito__borde_negro"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:padding="10dp"
                tools:ignore="UselessParent">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/_style_rectangulo_gris_oscuro__borde_blanco_10"
                    android:padding="1dp"
                    tools:ignore="NestedWeights">

                    <TextView
                        android:id="@+id/triceps"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/_style_rectangulo_gris_oscuro__borde_blanco_10"
                        android:fontFamily="@font/merriweather_light"
                        android:gravity="center"
                        android:text="@string/triceps"
                        android:textColor="@color/negro_oscuro"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="NestedWeights" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/_style_rectangulo_fondo_clarito__borde_negro"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:padding="10dp"
                tools:ignore="UselessParent">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/_style_borde_blanco"
                    android:layout_weight="1"
                    tools:ignore="NestedWeights">

                    <ImageView
                        android:id="@+id/mas_ejercicios_pequeno2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/mas"
                        tools:ignore="RtlSymmetry"
                        android:contentDescription="@string/mas_musculos" />
                </FrameLayout>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/_style_borde_negro_arriba"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/imagen_casa"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/casa"
                android:contentDescription="@string/imagen_casa" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/imagen_calendario"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/_style_borde_negro_izquierda"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/calendario"
                android:contentDescription="@string/imagen_casa" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/imagen_estadisticas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/_style_borde_negro_derecha_izquierda"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/estadisticas"
                android:contentDescription="@string/imagen_estadisticas" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/imagen_usuario"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/usuario"
                android:contentDescription="@string/imagen_usuario" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>