<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista.vista.InicioSesion">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fondo_gimnasio"
        android:scaleType="centerCrop"
        android:contentDescription="@string/fondo_gimnasio" />

    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/azul_clarito"
        android:padding="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foregroundGravity="center_vertical"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="30dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/_style_rectangulo_gris" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/merriweather_light"
                android:gravity="center"
                android:text="@string/bienvenido"
                android:textColor="@color/negro_oscuro"
                android:textSize="40sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/_style_rectangulo_gris" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="25dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/_style_rectangulo_gris" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/merriweather_light"
                    android:gravity="center"
                    android:text="@string/iniciar_sesion"
                    android:textColor="@color/negro_clarito"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/_style_rectangulo_gris" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/merriweather_light"
                android:text="@string/email"
                android:textColor="@color/negro_oscuro"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:autofillHints=""
                android:background="@drawable/_style_rectangulo_azul_clarito__borde_negro_clarito"
                android:ems="10"
                android:fontFamily="@font/merriweather_light"
                android:inputType="text"
                android:padding="10dp"
                tools:ignore="LabelFor,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/merriweather_light"
                android:text="@string/contrasena"
                android:textColor="@color/negro_oscuro"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@id/contrasena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:autofillHints=""
                android:background="@drawable/_style_rectangulo_azul_clarito__borde_negro_clarito"
                android:ems="10"
                android:fontFamily="@font/merriweather_light"
                android:inputType="textPassword"
                android:padding="10dp"
                tools:ignore="LabelFor,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/error"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:visibility="gone"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/merriweather_light"
                android:gravity="center"
                android:shadowColor="#000000"
                android:textColor="@color/rojo_clarito"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <Button
                android:id="@+id/iniciar_sesion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/_style_borde_10"
                android:backgroundTint="@color/azul_oscuro"
                android:fontFamily="@font/merriweather_light"
                android:shadowColor="@color/azul"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="10"
                android:text="@string/iniciar_sesion_mayusculas"
                android:textColor="@color/blanco"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/_style_rectangulo_gris" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/merriweather_light"
                    android:gravity="center"
                    android:text="@string/eres_nuevo"
                    android:textColor="@color/negro_clarito"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/_style_rectangulo_gris" />

            </LinearLayout>

            <Button
                android:id="@+id/registrarse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/_style_borde_10"
                android:backgroundTint="@color/azul"
                android:shadowColor="@color/azul_clarito"
                android:shadowDx="10"
                android:shadowDy="10"
                android:shadowRadius="20"
                android:text="@string/registrarse_mayusculas"
                android:textColor="@color/negro"
                android:textSize="20sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>