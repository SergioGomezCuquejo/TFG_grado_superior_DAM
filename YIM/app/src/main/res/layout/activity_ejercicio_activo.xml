<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:orientation="vertical"
    tools:context=".vista.vista.EjercicioActivo">

    <LinearLayout
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:padding="2dp"
        tools:ignore="DisableBaselineAlignment">

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            tools:ignore="NestedWeights">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/atras"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/atras_gris"
                app:shapeAppearanceOverlay="@style/radius" />
        </FrameLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:background="@drawable/_style_borde_blanco_arriba_abajo"
            android:fontFamily="@font/merriweather_light"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="Ejercicio 1 de 4"
            android:textColor="@color/blanco"
            android:textSize="16sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">


            <RelativeLayout
                android:id="@id/ejercicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/_style_rectangulo_fondo_clarito__borde_negro"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imagen"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/curl_de_biceps_hombre"
                    app:shapeAppearanceOverlay="@style/radius" />

                <ImageButton
                    android:id="@+id/boton_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="10dp"
                    android:background="@color/fondo_clarito"
                    app:srcCompat="@android:drawable/ic_dialog_info" />

                <TextView
                    android:id="@+id/titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imagen"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/merriweather_light"
                    android:gravity="center"
                    android:text="@string/nombre_ejercicio_1"
                    android:textColor="@color/blanco"
                    android:textSize="23sp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/informacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ejercicio"
                android:layout_marginTop="10dp"
                android:background="@drawable/_style_rectangulo_fondo_clarito__borde_negro"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/repeticiones_necesarias"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/_style_circulo_fondo_oscuro__borde_verde_clarito"
                        android:fontFamily="@font/merriweather_light"
                        android:gravity="center"
                        android:text="888"
                        android:textColor="@color/blanco"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/merriweather_light"
                        android:gravity="center"
                        android:text="Repeticiones necesarias"
                        android:textColor="@color/blanco"
                        android:textSize="17sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/descanso"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/_style_circulo_fondo_oscuro__borde_rojo_clarito"
                        android:fontFamily="@font/merriweather_light"
                        android:gravity="center"
                        android:text="88:88"
                        android:textColor="@color/blanco"
                        android:textSize="23sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/merriweather_light"
                        android:gravity="center"
                        android:text="Descanso"
                        android:textColor="@color/blanco"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/series"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/_style_circulo_fondo_oscuro__borde_naranja"
                        android:fontFamily="@font/merriweather_light"
                        android:gravity="center"
                        android:text="88/88"
                        android:textColor="@color/blanco"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/merriweather_light"
                        android:gravity="center"
                        android:text="Series necesarias"
                        android:textColor="@color/blanco"
                        android:textSize="17sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/serie_activa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/informacion"
                android:layout_marginTop="10dp"
                android:background="@drawable/_style_rectangulo_fondo_clarito__borde_negro"
                android:orientation="vertical"
                android:padding="12dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center|center_horizontal|center_vertical">

                    <TextView
                        android:id="@+id/serie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/merriweather_light"
                        android:text="Serie 1."
                        android:textColor="@color/blanco"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/coste"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/merriweather_light"
                        android:text=" (Subir)"
                        android:textColor="@color/verde_clarito"
                        android:textSize="18sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/serie"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:background="@drawable/_style_rectangulo_fondo_oscuro__borde_blanco_10"
                        android:gravity="center"
                        android:padding="10dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/peso"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/_style_rectangulo_fondo_oscuro__borde_blanco_10"
                            android:gravity="center"
                            android:hint="Peso"
                            android:inputType="numberDecimal"
                            android:textColor="@color/blanco"
                            android:textColorHint="@color/gris"
                            android:textSize="20dp"
                            tools:ignore="Autofill,HardcodedText,LabelFor,NestedWeights,SpUsage,TouchTargetSizeCheck" />

                        <EditText
                            android:id="@+id/repeticiones"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/_style_rectangulo_fondo_oscuro__borde_blanco_10"
                            android:gravity="center"
                            android:hint="Reps."
                            android:inputType="numberDecimal"
                            android:textColor="@color/blanco"
                            android:textColorHint="@color/gris"
                            android:textSize="20dp"
                            tools:ignore="Autofill,HardcodedText,LabelFor,SpUsage,TouchTargetSizeCheck" />

                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="0.3"
                            android:backgroundTint="@color/fondo_oscuro"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/mantener"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                    </LinearLayout>


                    <ImageView
                        android:id="@+id/agregar_ejercicio"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignEnd="@id/scrollView"
                        android:layout_alignBottom="@id/scrollView"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/_style_circulo_fondo_oscuro__borde_blanco"
                        android:contentDescription="@string/agregar_ejercicio"
                        android:padding="11dp"
                        android:src="@drawable/mas" />


                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/historial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/serie_activa"
                android:layout_marginTop="30dp"
                android:background="@drawable/_style_rectangulo_fondo_clarito__borde_negro"
                android:orientation="vertical"
                android:padding="12dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="false"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/merriweather_light"
                    android:foregroundGravity="center"
                    android:text="Historial"
                    android:textColor="@color/blanco"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/merriweather_light"
                    android:text="Día 88/88/8888"
                    android:textColor="@color/blanco"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/merriweather_light"
                        android:text="Serie 88:"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/blanco"
                        android:textStyle="bold"
                        android:textSize="17sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/merriweather_light"
                        android:text=" 888kg x 88 reps"
                        android:textColor="@color/gris_clarito"
                        android:textSize="17sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/merriweather_light"
                        android:gravity="end"
                        android:text="Subir"
                        android:textColor="@color/verde_clarito"
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/merriweather_light"
                        android:text="Serie 88:"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/blanco"
                        android:textStyle="bold"
                        android:textSize="17sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/merriweather_light"
                        android:text=" 888kg x 88 reps"
                        android:textColor="@color/gris_clarito"
                        android:textSize="17sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/merriweather_light"
                        android:gravity="end"
                        android:text="Mantener"
                        android:textColor="@color/naranja"
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/merriweather_light"
                        android:text="Serie 88:"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/blanco"
                        android:textStyle="bold"
                        android:textSize="17sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/merriweather_light"
                        android:text=" 888kg x 88 reps"
                        android:textColor="@color/gris_clarito"
                        android:textSize="17sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/merriweather_light"
                        android:gravity="end"
                        android:text="Bajar"
                        android:textColor="@color/rojo_clarito"
                        android:textSize="17sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/merriweather_light"
                    android:text="Día 88/88/8888"
                    android:textColor="@color/blanco"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/merriweather_light"
                        android:text="Serie 88:"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/blanco"
                        android:textStyle="bold"
                        android:textSize="17sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/merriweather_light"
                        android:text=" 888kg x 88 reps"
                        android:textColor="@color/gris_clarito"
                        android:textSize="17sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/merriweather_light"
                        android:gravity="end"
                        android:text="Mantener"
                        android:textColor="@color/naranja"
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/merriweather_light"
                        android:text="Serie 88:"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/blanco"
                        android:textStyle="bold"
                        android:textSize="17sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/merriweather_light"
                        android:text=" 888kg x 88 reps"
                        android:textColor="@color/gris_clarito"
                        android:textSize="17sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/merriweather_light"
                        android:gravity="end"
                        android:text="Subir"
                        android:textColor="@color/verde_clarito"
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/merriweather_light"
                        android:text="Serie 88:"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/blanco"
                        android:textStyle="bold"
                        android:textSize="17sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/merriweather_light"
                        android:text=" 888kg x 88 reps"
                        android:textColor="@color/gris_clarito"
                        android:textSize="17sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/merriweather_light"
                        android:gravity="end"
                        android:text="Bajar"
                        android:textColor="@color/rojo_clarito"
                        android:textSize="17sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/_style_borde_negro_arriba"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:baselineAligned="false">

        <FrameLayout
            android:id="@+id/imagen_casa"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:src="@drawable/casa"
                android:contentDescription="@string/imagen_casa" />

        </FrameLayout>


        <FrameLayout
            android:id="@+id/imagen_calendario"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/_style_borde_negro_izquierda">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:src="@drawable/calendario"
                android:contentDescription="@string/imagen_casa" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/imagen_estadisticas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/_style_borde_negro_derecha_izquierda">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:src="@drawable/estadisticas"
                android:contentDescription="@string/imagen_estadisticas" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/imagen_usuario"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:src="@drawable/usuario"
                android:contentDescription="@string/imagen_usuario" />

        </FrameLayout>
    </LinearLayout>
</LinearLayout>