<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:orientation="vertical"
    tools:context=".vista.vista.EjerciciosRutinas">


    <LinearLayout
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:padding="2dp">

        <FrameLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            tools:ignore="NestedWeights">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/atras"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/atras_gris"
                app:shapeAppearanceOverlay="@style/radius" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/musculos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="10dp">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:background="@drawable/_style_rectangulo_gris_oscuro__borde_blanco_izquierda"
                android:padding="1dp"
                tools:ignore="NestedWeights">

                <TextView
                    android:id="@+id/espalda"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/_style_rectangulo_gris_oscuro__borde_blanco_izquierda"
                    android:fontFamily="@font/merriweather_light"
                    android:gravity="center"
                    android:text="@string/espalda"
                    android:textColor="@color/negro_oscuro"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="NestedWeights" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/_style_rectangulo_gris_oscuro__borde_blanco_derecha"
                android:padding="1dp">

                <TextView
                    android:id="@+id/biceps"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/_style_rectangulo_gris_oscuro__borde_blanco_derecha"
                    android:fontFamily="@font/merriweather_light"
                    android:gravity="center"
                    android:text="@string/biceps"
                    android:textColor="@color/negro_oscuro"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="NestedWeights" />
            </FrameLayout>


        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="5dp"
                android:paddingRight="5dp">

                <RelativeLayout
                    android:id="@id/ejercicio1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/_style_rectangulo_fondo_clarito__borde_negro"
                    android:orientation="horizontal"
                    android:padding="2dp">


                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imagen1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="10dp"
                        android:src="@drawable/curl_de_biceps_hombre"
                        app:shapeAppearanceOverlay="@style/radius" />

                    <TextView
                        android:id="@+id/nombre1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toEndOf="@id/imagen1"
                        android:fontFamily="@font/merriweather_light"
                        android:text="@string/nombre_ejercicio_1"
                        android:textColor="@color/blanco"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/musculos_ej1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/nombre1"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toEndOf="@id/imagen1"
                        android:fontFamily="@font/merriweather_light"
                        android:text="@string/musculos_ejercicio_1"
                        android:textColor="@color/blanco" />

                    <LinearLayout
                        android:id="@+id/editar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:layout_below="@id/musculos_ej1"
                        android:layout_toEndOf="@id/imagen1"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/reloj"
                                android:layout_width="25dp"
                                android:layout_height="40dp"
                                android:padding="2dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="7dp"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/reloj" />

                            <EditText
                                android:id="@+id/minutos"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:backgroundTint="@color/blanco"
                                android:ems="2"
                                android:gravity="center"
                                android:inputType="numberDecimal"
                                android:text="59"
                                android:textColor="@color/blanco"
                                android:textSize="18dp"
                                tools:ignore="TouchTargetSizeCheck" />

                            <TextView
                                android:id="@+id/puntos"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginTop="7dp"
                                android:gravity="center"
                                android:fontFamily="@font/merriweather_light"
                                android:text=":"
                                android:textColor="@color/gris"
                                android:textSize="18dp" />


                            <EditText
                                android:id="@+id/segundos"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:backgroundTint="@color/blanco"
                                android:ems="2"
                                android:gravity="center"
                                android:inputType="numberDecimal"
                                android:text="59"
                                android:textColor="@color/blanco"
                                android:textSize="18dp"
                                tools:ignore="TouchTargetSizeCheck" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/series"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:backgroundTint="@color/blanco"
                                android:ems="2"
                                android:gravity="center"
                                android:inputType="numberDecimal"
                                android:text="88"
                                android:textColor="@color/blanco"
                                android:textSize="18dp"
                                tools:ignore="TouchTargetSizeCheck" />

                            <TextView
                                android:id="@+id/X"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginTop="7dp"
                                android:fontFamily="@font/merriweather_light"
                                android:gravity="center"
                                android:text="X"
                                android:textColor="@color/gris"
                                android:textSize="18dp" />

                            <EditText
                                android:id="@+id/repeticiones"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:backgroundTint="@color/blanco"
                                android:ems="2"
                                android:gravity="center"
                                android:inputType="numberDecimal"
                                android:text="88"
                                android:textColor="@color/blanco"
                                android:textSize="18dp"
                                tools:ignore="TouchTargetSizeCheck" />

                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/_style_rectangulo_fondo_clarito__borde_negro"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imagen2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="10dp"
                        android:src="@drawable/mujer_posando"
                        app:shapeAppearanceOverlay="@style/radius" />

                    <TextView
                        android:id="@+id/nombre2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toEndOf="@id/imagen2"
                        android:fontFamily="@font/merriweather_light"
                        android:text="@string/nombre_ejercicio_2"
                        android:textColor="@color/blanco"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/nombre2"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toEndOf="@id/imagen2"
                        android:fontFamily="@font/merriweather_light"
                        android:text="@string/musculos_ejercicio_2"
                        android:textColor="@color/blanco" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/_style_rectangulo_fondo_clarito__borde_negro"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imagen3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="10dp"
                        android:src="@drawable/sentadilla_hombre"
                        app:shapeAppearanceOverlay="@style/radius" />

                    <TextView
                        android:id="@+id/nombre3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toEndOf="@id/imagen3"
                        android:fontFamily="@font/merriweather_light"
                        android:text="@string/nombre_ejercicio_3"
                        android:textColor="@color/blanco"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/nombre3"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toEndOf="@id/imagen3"
                        android:fontFamily="@font/merriweather_light"
                        android:text="@string/musculos_ejercicio_3"
                        android:textColor="@color/blanco" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/_style_rectangulo_fondo_clarito__borde_negro"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imagen4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="10dp"
                        android:src="@drawable/press_militar_hombre"
                        app:shapeAppearanceOverlay="@style/radius" />

                    <TextView
                        android:id="@+id/nombre4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toEndOf="@id/imagen4"
                        android:fontFamily="@font/merriweather_light"
                        android:text="@string/nombre_ejercicio_4"
                        android:textColor="@color/blanco"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/nombre4"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toEndOf="@id/imagen4"
                        android:fontFamily="@font/merriweather_light"
                        android:text="@string/musculos_ejercicio_4"
                        android:textColor="@color/blanco" />

                </RelativeLayout>


            </LinearLayout>
        </ScrollView>

        <ImageView
            android:id="@+id/agregar_ejercicio"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@id/scrollView"
            android:layout_alignBottom="@id/scrollView"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/_style_circulo_fondo_oscuro__borde_blanco"
            android:contentDescription="@string/agregar_ejercicio"
            android:padding="15dp"
            android:src="@drawable/mas" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/_style_borde_negro_arriba"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingTop="2dp">

        <FrameLayout
            android:id="@+id/imagen_casa"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:contentDescription="@string/imagen_casa"
                android:scaleType="fitCenter"
                android:src="@drawable/casa" />

        </FrameLayout>


        <FrameLayout
            android:id="@+id/imagen_calendario"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/_style_borde_negro_izquierda">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:contentDescription="@string/imagen_casa"
                android:scaleType="fitCenter"
                android:src="@drawable/calendario" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/imagen_estadisticas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/_style_borde_negro_derecha_izquierda">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:contentDescription="@string/imagen_estadisticas"
                android:scaleType="fitCenter"
                android:src="@drawable/estadisticas" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/imagen_usuario"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:contentDescription="@string/imagen_usuario"
                android:scaleType="fitCenter"
                android:src="@drawable/usuario" />

        </FrameLayout>
    </LinearLayout>
</LinearLayout>