                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/merriweather_light"
                            android:gravity="center"
                            android:text="Reps"
                            android:textColor="@color/blanco"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
