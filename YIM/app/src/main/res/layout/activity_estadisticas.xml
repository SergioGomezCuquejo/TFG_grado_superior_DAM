                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/_style2_borde_blanco_10"
                android:backgroundTint="@color/fondo_clarito"
                android:backgroundTintMode="add"
                android:padding="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/nombre_ejercicio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/merriweather_light"
                        android:text="Curl de concentración con mancuerna"
                        android:textColor="@color/blanco"
                        android:textSize="18sp"
                        android:textStyle="bold|italic" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp">

                        <View
                            android:layout_width="15dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/_style2_borde_blanco_20"
                            android:backgroundTint="@color/rojo_clarito"
                            android:backgroundTintMode="add"
                            android:padding="2dp"
                            android:rotation="-10" />

                        <View
