                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/_style2_borde_blanco_20"
                    android:backgroundTint="@color/fondo_clarito"
                    android:backgroundTintMode="add"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/merriweather_light"
                        android:gravity="center"
                        android:text="Semana 1"
                        android:textColor="@color/blanco"
                        android:textSize="16sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/merriweather_light"
                        android:gravity="center"
                        android:text="888"
                        android:background="@drawable/_style_borde_blanco_derecha_izquierda"
                        android:textColor="@color/blanco"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/merriweather_light"
                        android:gravity="center"
                        android:text="888"
                        android:textColor="@color/blanco"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/_style2_borde_blanco_20"
                    android:backgroundTint="@color/rojo_clarito"
                    android:backgroundTintMode="add"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/merriweather_light"
                        android:gravity="center"
                        android:text="Semana 2"
                        android:textColor="@color/blanco"
                        android:textSize="16sp"
                        android:textStyle="bold|italic" />

                    <TextView
