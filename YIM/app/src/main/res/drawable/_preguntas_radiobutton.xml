<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado por defecto -->
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">

                    <stroke
                        android:width="1dp"
                        android:color="@color/negro" />
                    <padding
                        android:bottom="15sp"
                        android:left="15sp"
                        android:right="15sp"
                        android:top="15sp"/>
                    <corners android:radius="5dp"/>
                    <solid android:color="@color/gris_clarito"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Estado cuando estÃ¡ marcado -->
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">

                    <stroke
                        android:width="1dp"
                        android:color="@color/azul_oscuro" />
                    <padding
                        android:bottom="15sp"
                        android:left="15sp"
                        android:right="15sp"
                        android:top="15sp"/>
                    <corners android:radius="5dp"/>
                    <solid android:color="@color/azul"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
