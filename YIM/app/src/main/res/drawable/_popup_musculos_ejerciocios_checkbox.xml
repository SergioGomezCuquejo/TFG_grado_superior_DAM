<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado por defecto -->
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">

                    <padding
                        android:bottom="10dp"
                        android:left="10dp"
                        android:right="10dp"
                        android:top="10dp"/>
                    <corners android:radius="10dp"/>
                    <solid android:color="@color/gris_clarito"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Estado cuando estÃ¡ marcado -->
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">

                    <padding
                        android:bottom="10dp"
                        android:left="10dp"
                        android:right="10dp"
                        android:top="10dp"/>
                    <corners android:radius="10dp"/>
                    <solid android:color="@color/fondo_oscuro"/>
                    <stroke
                        android:width="2dp"
                        android:color="@color/blanco"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
