<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Inicio, VerEjercicios,CrearEjercicios -->
    <style name="radius">
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
    </style>

    <style name="radius100">
        <item name="cornerSizeTopRight">100dp</item>
        <item name="cornerSizeTopLeft">100dp</item>
        <item name="cornerSizeBottomRight">100dp</item>
        <item name="cornerSizeBottomLeft">100dp</item>
    </style>


    <!-- Temas de los popups -->
    <style name="AppTheme.TemaPopup">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.PopupCerrable" parent="AppTheme.TemaPopup">
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="AppTheme.PopupNoCerrable" parent="AppTheme.TemaPopup">
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

</resources>